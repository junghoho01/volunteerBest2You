<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminVolunteerEditActivity">

    <ImageView
        android:id="@+id/img_arrowBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/img_arrowBack"
        android:text="Edit Volunteer"
        android:textColor="#098B9A"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_username"
                android:layout_below="@id/tv_username"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:hint="younghen"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:id="@+id/tv_password"
                android:layout_below="@id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_password"
                android:layout_below="@id/tv_password"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:focusable="false"
                android:clickable="false"
                android:ems="10"
                android:hint="Abcd123#"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_below="@id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_email"
                android:layout_below="@id/tv_email"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:ems="10"
                android:focusable="false"
                android:clickable="false"
                android:hint="text@gmail.com"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:id="@+id/tv_contactNumber"
                android:layout_below="@id/et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_contactNumber"
                android:layout_below="@id/tv_contactNumber"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="number"
                android:hint="0118089988"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:id="@+id/tv_addressInfo"
                android:layout_below="@id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Information"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_addressInfo"
                android:layout_below="@id/tv_addressInfo"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Kuala Lumpur"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="40dp"/>

            <!-- text view to display selected items-->
            <TextView
                android:id="@+id/tv_skillset"
                android:layout_below="@id/et_addressInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Skill Set"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dropdown_skillset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:drawable/editbox_background"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:drawablePadding="16dp"
                android:hint="Select Skill Set"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="40dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_below="@id/dropdown_skillset"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#00BBC4"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>