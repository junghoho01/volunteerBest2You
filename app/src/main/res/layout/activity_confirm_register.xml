<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmRegisterActivity"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_forgotPassword"
        android:layout_below="@id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Verification"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <!-- Add a horizontal line below the TextView -->
    <View
        android:id="@+id/v_line"
        android:layout_below="@id/tv_forgotPassword"
        android:layout_width="140dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="#00BBC4" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_below="@id/v_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A verfication code has been sent to your email, please enter the code to the field"
        android:textColor="#064D5A"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/tv_vfCode"
        android:layout_below="@id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_vfCode"
        android:layout_below="@id/tv_vfCode"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"
        android:hint="0 8 7 6 5 2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_below="@id/et_vfCode"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#00BBC4"/>

</RelativeLayout>